.crop-body {
       width: 100vw;
       height: 100vh;
       position: fixed;
       top: 0;
       left: 0;
       transition: 0.2s;
       background-color: #ddd;
       background-size: 20px 20px;
       background-image: linear-gradient(45deg, #fff 25%, transparent 25%),
              linear-gradient(-45deg, #fff 25%, transparent 25%),
              linear-gradient(45deg, transparent 75%, #fff 75%),
              linear-gradient(-45deg, transparent 75%, #fff 75%);
}

.crop-img {
       position: fixed;
       transition: 0s step-start;
}

canvas {
       position: absolute;
}

.crop-mask {
       left: 0;
       top: 0;
       width: 100vw;
       height: 100vh;
}

.crop-head {
       position: absolute;
       overflow: hidden;
       text-align: center;
       left: 0;
       transition: 0.2s cubic-bezier(.1, .84, .76, 1.4);
       z-index: 10
}

.crop-btn {
       position: absolute;
       height: 100%;
       text-align: center;
       width: 20.6%;
       color: white;
}

.crop-btn:nth-child(1) {
       background: rgb(233, 76, 8);
       /*-webkit-backdrop-filter: blur(8px);*/
       backdrop-filter: blur(8px);
       width: 38.2%;
       right: 61.8%
}

.crop-btn:nth-child(2) {
       background: #6751fa;
       right: 41.2%
}

.crop-btn:nth-child(3) {
       background: #8ad879;
       right: 20.6%
}

.crop-btn:nth-child(4) {
       background: #5acfc9;
       right: 0;
}

.crop-btn image {
       width: 30px;
       height: 30px;
}
.crop-hover{
       text-shadow: 0 0 5px #fff;
}
.crop-hover image{
       filter: drop-shadow(0 0 5px #fff);
}